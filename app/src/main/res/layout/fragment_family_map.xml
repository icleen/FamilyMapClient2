<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="cs240.iainlee.familymapclient.FamilyMapFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <fragment
            android:id="@+id/mapFragment"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            class="com.amazon.geo.mapsv2.MapFragment" />

        <LinearLayout
            android:id="@+id/event_info_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/event_window_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/event_window_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_info_window_default_name"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/event_window_info2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_info_window_default_info"
                    android:textSize="22dp"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</FrameLayout>
